LED BLINKING
#include<reg51.h>
void delay(unsigned int ms){
unsigned int i,j;
	for(i=0;i<ms ;i++){
		for(j=0;j<1275;j++){}
}}
void main(){
while(1){
	P2=0x55;
	delay(500);
	
	P2=0xAA;
	delay(500);
}}

LED FLASHING
Program
#include<reg51.h>
void delay(unsigned int ms){
unsigned int i,j;
	for(i=0;i<ms ;i++){
		for(j=0;j<1275;j++){}
}}
void main(){
while(1){
	P2=0x00;
	delay(500);
	
	P2=0xFF;
	delay(500);
}}
